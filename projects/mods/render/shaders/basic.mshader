#msh_vertex
#version 330

in vec3 in_Position;
in vec4 in_Color;

smooth out vec4 v_Color;

void main()
{
	gl_Position = vec4(in_Position, 1.0);
	v_Color = in_Color;
}

#msh_fragment
#version 330

smooth in vec4 v_Color;
out vec4 out_Color;

void main()
{
	out_Color = v_Color;
	//out_Color = vec4(1.0, 0.0, 0.0, 1.0);
}
