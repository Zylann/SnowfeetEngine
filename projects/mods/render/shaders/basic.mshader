#msh_vertex
#version 330

layout (location = 0) in vec3 in_Position;
layout (location = 1) in vec3 in_Color;

smooth out vec3 v_Color;

void main()
{
	gl_Position = vec4(in_Position, 1.0);
	v_Color = in_Color;
}

#msh_fragment
#version 330

smooth in vec3 v_Color;
out vec4 out_Color;

void main()
{
	out_Color = vec4(v_Color, 1.0);
}

